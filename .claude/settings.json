{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/nomos-pretooluse.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/nomos-stop.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/nomos-session-start.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/nomos-userpromptsubmit.sh"
          }
        ]
      }
    ]
  },
  "nomos": {
    "version": "0.1.3",
    "taskViewer": {
      "enabled": true,
      "autoRefresh": true,
      "refreshInterval": 2000
    },
    "linter": {
      "enabled": true,
      "layers": {
        "layer1": {
          "enabled": true,
          "rules": [
            "ruff",
            "eslint"
          ]
        },
        "layer2": {
          "enabled": true,
          "rules": [
            "bandit"
          ]
        },
        "layer3": {
          "enabled": true,
          "dynamicLoading": true
        }
      }
    },
    "git": {
      "autoCommit": true,
      "autoBranch": true,
      "commitPrefix": "feat"
    },
    "annotation": {
      "enabled": true,
      "dataFile": ".claude/annotations.json"
    }
  }
}
